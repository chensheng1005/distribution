<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="xxx" targetRuntime="MyBatis3Simple">
        <commentGenerator>
            <property name="suppressDate" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="org.mariadb.jdbc.Driver"
                        connectionURL="jdbc:mariadb://localhost/distribution"
                        userId="root" password="123456">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.chensheng.model" targetProject="E:\IDEA\Logistics_MyBatis\src\main\java">
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"  targetProject="E:\IDEA\Logistics_MyBatis\src\main\resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.chensheng.dao"  targetProject="E:\IDEA\Logistics_MyBatis\src\main\java"/>

        <table tableName="ecs_%">
            <generatedKey column="id" sqlStatement="Mysql"/>
        </table>
    </context>
</generatorConfiguration>